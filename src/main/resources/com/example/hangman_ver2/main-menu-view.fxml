<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.hangman_ver2.MainMenuController">
   <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../../images/view/main-background.png" />
      </image>
   </ImageView>
   <Label alignment="CENTER" layoutX="180.0" layoutY="161.0" prefHeight="32.0" prefWidth="175.0" text="Nowa Gra" textFill="WHITE">
      <font>
         <Font name="Impact" size="24.0" />
      </font>
   </Label>
   <Label alignment="CENTER" layoutX="180.0" layoutY="210.0" onMouseClicked="#scoreTable" prefHeight="32.0" prefWidth="175.0" text="Ranking" textFill="WHITE">
      <font>
         <Font name="Impact" size="24.0" />
      </font>
   </Label>
   <Label alignment="CENTER" layoutX="180.0" layoutY="262.0" onMouseClicked="#addWord" prefHeight="32.0" prefWidth="175.0" text="Dodaj słowo" textFill="WHITE">
      <font>
         <Font name="Impact" size="24.0" />
      </font>
   </Label>
   <Label alignment="CENTER" layoutX="180.0" layoutY="314.0" onMouseClicked="#addWord" prefHeight="32.0" prefWidth="175.0" text="Wyjście" textFill="WHITE">
      <font>
         <Font name="Impact" size="24.0" />
      </font>
   </Label>
   <Button layoutX="180.0" layoutY="161.0" mnemonicParsing="false" onAction="#newGame" opacity="0.0" prefHeight="32.0" prefWidth="175.0" text="Nowa Gra" textAlignment="CENTER" />
   <Button layoutX="180.0" layoutY="210.0" mnemonicParsing="false" onAction="#scoreTable" opacity="0.0" prefHeight="32.0" prefWidth="175.0" text="Ranking" />
   <Button layoutX="180.0" layoutY="262.0" mnemonicParsing="false" onAction="#addWord" opacity="0.0" prefHeight="26.0" prefWidth="175.0" text="Dodaj wlasne slowo" />
   <Button layoutX="180.0" layoutY="314.0" mnemonicParsing="false" opacity="0.0" prefHeight="32.0" prefWidth="175.0" text="Wyjscie" />
</AnchorPane>
